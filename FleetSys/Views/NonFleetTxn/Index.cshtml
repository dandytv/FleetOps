@using FleetOps.Helpers;
@model FleetOps.ViewModel.NonFleetTxnViewModel

@{
    ViewBag.Title = "Non Fleet Transaction";
    Layout = "~/Views/Shared/_CoreLayout.cshtml";
}

@section ModuleSidebar
{
    <style type= "type/css">
        .form-group {
            padding-bottom : 15px;
            border-bottom : 1px dashed #eee;
        }
        .btn-justified .btn {
            color : #fff;
        }
    </style>
    <div class="sidebar-collapse" routing menu>
        <div class="sidebar-header">
            <div class="btn-group btn-group-justified">
                <a href="#/" data-redirect="index" class="btn btn-primary btn-sm" role="button"><i class="fa fa-list"></i>&nbsp; Show List</a>
                <a href="#/new" data-redirect="new" class="btn btn-success btn-sm" role="button"><i class="fa fa-plus"></i>&nbsp; New</a>
            </div>
        </div>
        <div class="sidebar-menu">
            <ul class="nav nav-sidebar">
            </ul>
        </div>
    </div>
}

<div class="main" style="opacity: 1; min-height: 658px;">
    <div class="row">
        <div class="col-lg-12">
            <ol class="breadcrumb">
                <li><a href="@System.Configuration.ConfigurationManager.AppSettings["urlPrefix"]/Home">Home</a></li>
                <li><a href="@System.Configuration.ConfigurationManager.AppSettings["urlPrefix"]/Application#/">Applications</a></li>
                <li>Index</li>
                <li class="active">{{root.obj.applId}}</li>
            </ol>
        </div>
        <div class="col-lg-12">
            <ng-view></ng-view>
            <script type="text/ng-template" id="index.html">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h2><i class="fa fa-list"></i>Latest Processed Accounts</h2> 
                        </div>
                        <div class="panel-body">
                            <table dtable options="dtOptions" class="table table-striped table-bordered datatable dataTable no-footer">
                                <thead>
                                    <tr>
                                        <th>Transaction Code<th>
                                        <th>Transaction Description</th>
                                        <th>Transaction Amount</th>
                                        <th>Transaction Date</th>
                                        <th>Debit and Credit Indicator</th>
                                        <th>Account</th>
                                        <th>User ID</th>
                                        <th>Transaction ID</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </script>
        </div>
    </div>
</div>
