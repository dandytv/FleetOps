@using FleetOps.Helpers
@model ModelSector.TxnAdjustment

<div class="panel panel-default">

    <div class="panel-heading">
        <div class="panel-actions pull-left">
            <a href="javascript:;" ng-click="modalClick();" class="btn-minimize"><i class="fa fa-plus"></i></a>
            <a href="javascript:;" class="btn-close"><i class="fa fa-refresh"></i></a>
        </div>
    </div>

    <div class="panel-body">
        <div id="contactHolder" class="zerotop">
            <table id="tblTxnAdj" class="table bootstrap-datatable datatable small-font" data-dtable options ="dtOptions">
                <thead>
                    <tr>
                        <th style="width:200px">Card No</th>
                        <th>Transaction Date</th>
                        <th>Amount</th>
                        <th>Description</th>
                        <th>Status</th>
                        <th>User Id</th>
                        <th>Transaction Cd</th>
                        <th>Transaction ID</th>
                        <th>Withheld Unsettle ID</th>
                        <th>Creation Date</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>

        <div id="TxnAdjModal" class="modal hide" data-backdrop="static" data-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-header" data-toggle="modal">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">X</button>
                <h3 id="contactModalHeader">Transaction Adjustment</h3>
            </div>
            <div class="modal-body">
                <form id="formTxnAdjustment" class="form-horizontal">
                    @Html.CustomNgTextBoxFor(model => model.TxnId, null, new { id = "txtTxnId", Class = "span5", @readonly = "readonly" })
                    @Html.CustomNgSelectListFor(model => model.SelectedTxnCd, Model.TxnCd, null, new { id = "ddltxnTxnCd", @class = "span5" })
                    @Html.CustomNgTextBoxFor(model => model.TxnDate, null, new { id = "txttxnTxnDate", Class = "span5" })
                    @Html.CustomNgTextBoxFor(model => model.TotAmnt, null, new { id = "txttxnTotAmt", Class = "span5", @data_type = "amount" })
                    @Html.CustomNgTextBoxFor(model => model.Totpts, null, new { id = "txttxnTotPts", Class = "span5" })
                    @Html.CustomNgTextBoxFor(model => model.Descp, null, new { id = "txttxnDescp", Class = "span5" })
                    @Html.CustomNgTextBoxFor(model => model.InvoiceNo, null, new { id = "txttxnInvoiceNo", Class = "span5" })
                    @Html.CustomNgTextBoxFor(model => model.CollectionId, null, new { id = "txttxnCollectionId", Class = "span5" })
                    @Html.CustomNgTextBoxFor(model => model.UserId, null, new { id = "txttxnUserId", Class = "span5" })
                    @Html.CustomNgTextBoxFor(model => model.CreationDate, null, new { id = "txttxnCreationDate", Class = "span5" })
                    @Html.CustomNgTextBoxFor(model => model.EndorsedBy, null, new { id = "txttxnEndorsedBy", Class = "span5" })
                    @Html.CustomNgTextBoxFor(model => model.EndorsedDate, null, new { id = "txttxnEndorsedDate", Class = "span5" })
                    @Html.CustomNgTextBoxFor(model => model.WithHeldUnsettleId, null, new { id = "txttxnWithheldunsettleId", Class = "span5" })
                    @Html.CustomNgTextBoxFor(model => model.DeftBusnLocation, null, new { id = "txttxnDeftBusnLocation", Class = "span5" })
                    @Html.CustomNgTextBoxFor(model => model.DeftTermId, null, new { id = "txttxnDefTermId", Class = "span5" })
                    @Html.CustomNgTextBoxFor(model => model.CheqNo, null, new { id = "txttxnCheqNo", Class = "span5" })
                </form>
            </div>
            <div class="modal-footer">
                <div class="form-actions">
                    <button id="btnTxntoSave" style="width: 60px" class="btn btn-primary">Save</button>
                </div>
            </div>
        </div>

        <div id="txnDeleteConfirm" data-backdrop="static" class="modal hide">
            <div class="modal-header deletion-head">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">X</button>
                <h4>Confirmation</h4>
            </div>
            <div class="modal-body">
                Please confirm the record deletion
            </div>
            <div class="modal-footer">
                <a href="#" data-dismiss="modal" class="btn">Cancel</a>
                <a href="#" id="txnDeleteConfirmed" class="btn btn-danger">Yes,Delete<i class="icon-twitter"></i></a>
            </div>
        </div>
    </div>
</div>

