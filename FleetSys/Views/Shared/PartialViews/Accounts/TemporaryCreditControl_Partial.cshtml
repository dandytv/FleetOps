@using FleetOps.Helpers
@using ModelSector.Global_Resources;
@model  ModelSector.TempCreditCtrlModel
<h1>Temporary Credit Limit</h1><br/>
<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="panel panel-default">
        <div class="panel-heading"></div>
        <form>
            <div class="panel-body">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="row">
                            <div class="col-sm-6">
                                @*@Html.CustomNgTextBoxFor(model => model.ExpDate, new { required = true }, new { id = "txtTempExpDate", date_picker = "", @data_bind = "value:ExpDate", @section = "tem" })*@
                                @Html.CustomNgDateRangeFor(model => model.ExpDateFrom, model => model.ExpDateTo, "Date Range", new { required = "true" }, new { @section = "tem" })
                            </div>

                            <div class="col-sm-6">
                                @Html.CustomNgTextBoxFor(model => model.AllowCreditLimit, new { required = true }, new { @section = "tem", @amount = "" })
                            </div>
                            <div class="col-sm-6">
                                @Html.CustomNgTextBoxFor(model => model.UserId, null, new { id = "txtUserId", @readonly = "readonly", @section = "tem" })
                            </div>
                            <div class="col-sm-6">
                                @Html.CustomNgTextBoxFor(model => model.CreationDate, null, new { id = "txtCreationDate", @readonly = "readonly", @section = "tem" })
                            </div>
                        </div>
                    </div>
                      
                    </div>
            </div>
                <div class="panel-footer">
                    <div class="text-right">
                        @if (!Html.NotAuthorized("tem", "SaveTCCAcct"))
                        {
                            <input type="button" data-validation-form data-customsubmit="Save();" @(Html.IsReadOnly("tem", "SaveTCCAcct") ? "disabled=disabled" : "") class="btn btn-primary btn-cons" name="finish" value="Save">
                        }
                    </div>
                </div>
        </form>
    </div>

    <div class="panel panel-default">
        <div class="panel-body">
            <div class="table-holder">
                <table id="tblCredCtrl" class="table bootstrap-datatable datatable small-font" data-dtable options="dtOptions">
                    <thead>
                        <tr>
                            <th>Event Type</th>
                            <th>Account No</th>
                            <th>Description</th>
                            <th>System Ind</th>
                            <th>Creation Date</th>
                            <th>User Id</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>
