<div class="panel panel-default">

    <div class="panel-heading">
        <div class="panel-actions pull-left">
            <a href="javascript:;" ng-click="modalClick();" class="btn-minimize"><i class="fa fa-plus"></i></a>
            <a href="javascript:;" class="btn-close"><i class="fa fa-refresh"></i></a>
        </div>
    </div>

    <style type="text/css">
        .dl dd {
            padding-bottom: 20px;
        }
    </style>

    <div class="panel-body">

        <div ng-if="txnType=='settlement'">
            <div class="row">
                <div class="col-sm-3">
                    <dl>
                        <dt class="text-success">Description</dt>
                        <dd ng-if="Details.Descp">{{Details.Descp}}</dd>
                        <dd ng-if="!Details.Descp">-----</dd>
                    </dl>
                </div>

                <div class="col-sm-2">
                    <dl>
                        <dt class="text-success">Txn Date</dt>
                        <dd ng-if="Details.TxnDate">{{Details.TxnDate}}</dd>
                        <dd ng-if="!Details.TxnDate">-----</dd>

                    </dl>
                </div>

                <div class="col-sm-2">
                    <dl>
                        <dt class="text-success">Due Date</dt>
                        <dd ng-if="Details.DueDate">{{Details.DueDate}}</dd>
                        <dd ng-if="!Details.DueDate">-----</dd>

                    </dl>
                </div>

                <div class="col-sm-2">
                    <dl>
                        <dt class="text-success">Billing Txn Amount</dt>
                        <dd ng-if="Details.BillingAmt">{{Details.BillingAmt}}</dd>
                        <dd ng-if="!Details.BillingAmt">-----</dd>
                    </dl>
                </div>
            </div>
