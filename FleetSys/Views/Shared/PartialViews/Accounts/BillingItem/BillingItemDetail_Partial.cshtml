                <dt class="text-success">Description</dt>
                <dd>{{Details.Descp}}</dd>
                <dt class="text-success">Txn Date</dt>
                <dd>{{Details.TxnDate}}</dd>
                <dt class="text-success">Due Date</dt>
                <dd>{{Details.DueDate}}</dd>
                <dt class="text-success">Billing Txn Amount</dt>
                <dd>{{Details.BillingAmt}}</dd>
            </dl>*@

            <table class="table bootstrap-datatable datatable small-font" data-dtable options="dtOptions">
                <thead>
                    <tr>
                        <th>Txn ID</th>
                        <th>Settled Date</th>
                        <th>Settled Amount</th>
                        <th>Process Date</th>
                        <th>User ID</th>
                        <th>Creation Date</th>
                        <th>Ref ID</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
        <div ng-if="txnType=='txnlist'">
            <table class="table bootstrap-datatable datatable small-font" data-dtable options="dtOptions">
                <thead>
                    <tr>
                        <th>Txn ID</th>
                        <th>Card No</th>
                        <th>Txn Date</th>
                        <th>Booking Date</th>
                        <th>Process Date</th>
                        <th>Billing Amt</th>
                        <th>Description</th>
                        <th>Dealer</th>
                        <th>Term ID</th>
                        <th>User ID</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>
