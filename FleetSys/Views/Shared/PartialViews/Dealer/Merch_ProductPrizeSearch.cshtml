
@using FleetOps.Helpers;
@model  ModelSector.BusnLocTerminal
@using ModelSector.Global_Resources;


<div class="modal md-modal md-effect-1" data-backdrop="static" role="dialog" aria-labelledby="myModalLabel" tabindex="-1" app-modal trigger="modalOpen" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" data-toggle="modal">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">X</button>
                <h2>Product Price Search</h2>
            </div>
            <div class="modal-body">
                <form>
                    <div class="row">
                        <div class="col-sm-6">
                            @Html.CustomNgSelectListFor(model => model.SelectedProdType, Model.ProdType, null, new { @Name = "ProdType", @section = "Transaction Search" })
                        </div>
                        @*<div class="col-sm-6">
                            @Html.CustomNgSelectListFor(model => model.SettlementStart, Model.TxnCategory, null, new { @Name = "TxnCategory", @section = "Transaction Search" })
                        </div>
                        <div class="col-sm-6">
                            @Html.CustomNgSelectListFor(model => model.SelectedTxnCd, Model.TxnCd, null, new { @Name = "TxnCd", @section = "Transaction Search" })
                        </div>*@
                        <div class="col-sm-6">
                            @Html.CustomNgDateRangeFor(model => model.SettlementStart, model => model.SettlementEnd, "Effective Date Range", new { @section = "Transaction Search" })
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                @if (!Html.NotAuthorized("Location", "Save"))
                {
                    <div class="form-actions">
                        <button ng-click="SearchTxn();" @(Html.IsReadOnly("Location", "Save") ? "disabled=disabled" : "") class="btn btn-primary">Search</button>
                    </div>
                }
            </div>

        </div>
    </div>
</div>

<div class="panel panel-default">

    <div class="panel-heading">
        <div class="panel-actions pull-left">
            <a href="javascript:;" ng-click="modalClick();" class="btn-minimize"><i class="fa fa-search"></i></a>
            <a href="javascript:;" class="btn-close"><i class="fa fa-refresh"></i></a>
        </div>
    </div>

    <div class="panel-body">

        <table class="table bootstrap-datatable datatable small-font" data-dtable options="dtOptions">
            <thead>
                <tr>
                    <th>Effective Date From</th>
                    <th>Effective Date To</th>
                    <th>Product</th>
                    <th>Price</th>
                    <th>Creation Date</th>
                    @*<th>Quantity</th>
                    <th>Dealer</th>
                    @* <th>Term Id</th>
                        <th>Approve Code</th>*@
                    @*<th>Auth Card No</th>
                    <th>Prcs Date</th>
                    <th>Txn Id</th>
                    <th>Receipt No</th>
                    <th>Batch</th>
                    <th>Vehicle Reg.No</th>
                    <th>Driver Name</th>
                    <th>Site Id</th>*@
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>
