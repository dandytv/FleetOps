                                @*@Html.CustomNgTextBoxFor(model => model.MCC, null, new { @section = "gen" })*@
                            </div>
                            @*<div class="col-sm-6">
                                @Html.CustomNgSelectListFor(model => model.SelectedSIC, Model.SIC, null, new { @Name = "SIC", @section = "gen" })
