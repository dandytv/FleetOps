@using FleetOps.Helpers
@model ModelSector.ChangeStatus

<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="panel panel-default">
        <div class="panel-body">
            @using (Html.BeginForm("SaveChangedStatus", "CardHolder", FormMethod.Post, new { id = "formChangedAcctSts", @class = "form-horizontal" }))
            {
                @Html.HiddenFor(m => m._CardnAccNo.CardNo)
                @Html.HiddenFor(m => m._CardnAccNo.AccNo)
                @Html.CustomNgSelectListFor(model => model.SelectedCurrentStatus, Model.CurrentStatus, null, new { @section = "Status Maintenance", disabled = "true" })
                @Html.CustomNgSelectListFor(model => model.SelectedChangeStatusTo, Model.ChangeStatusTo, new { required = true }, new { @section = "Status Maintenance" })
                @Html.CustomNgSelectListFor(model => model.SelectedReasonCode, Model.ReasonCode, new { required = true }, new { @section = "Status Maintenance" })
                @Html.CustomNgTextAreaFor(model => model.Remarks, null, new { @section = "Status Maintenance", rows = "3" })
                @Html.CustomNgSelectListFor(model => model.SelectedRefType, Model.RefType, null, new { @section = "Status Maintenance" })
                @Html.CustomNgTextBoxFor(model => model.RefId, null, new { @section = "Status Maintenance" })

            }
            <input type="hidden" id="stsSaveAccess" value="@Html.GetControlStatus("Save", "Status Maintenance")" />
            </div>
        </div>
    <div class="panel-footer">
        @if (!Html.NotAuthorized("Status Maintenance", "Save"))
        {
            <div class="form-actions">
                <input type="button" data-validation-form data-customsubmit="savePersonInfo();" @(Html.IsReadOnly("Status Maintenance", "Save") ? "disabled=disabled" : "") class="btn btn-primary btn-cons" name="finish" value="Save">
                @*<button id="saveVelocityLimit" @(Html.IsReadOnly("Status Maintenance", "Save") ? "disabled=disabled" : "") style="width: 60px" class="btn btn-primary">Save</button>*@
            </div>
        }
        
    </div>

    </div>

