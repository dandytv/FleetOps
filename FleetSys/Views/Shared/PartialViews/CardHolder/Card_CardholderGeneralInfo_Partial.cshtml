@using FleetOps.Helpers
@model ModelSector.CardHolderInfoModel

<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="panel panel-default">
        <div class="panel-body">
            @using (Html.BeginForm("SaveCardHolderInfo", "CardHolder", FormMethod.Post, new { id = "formCardholder", @class = "form-horizontal" }))
            {
                <div class="control-group">
                    <div class="control-label">Account No</div>
                    <div class="controls">
                        <input type="text" name="AcctNo" readonly class="input-xlarge" value="@Model.AcctNo" />
                    </div>
                </div>
                @Html.CustomNgTextBoxFor(model => model.CardNo, null, new { @readonly = "readonly", section = "General Info" })
                @Html.CustomNgSelectListFor(model => model.SelectedCostCentre, Model.CostCentre, null, new { section = "General Info" })
                @Html.CustomNgTextBoxFor(model => model.EmbossName, null, new { section = "General Info" })
                @Html.CustomNgTextBoxFor(model => model.CardExpiry, null, new { id = "txtCardExpiry", @readonly = "readonly", @data_type = "datepicker", section = "General Info" })
                @Html.CustomNgSelectListFor(model => model.SelectedCardType, Model.CardType, null, new { @readonly = "readonly", section = "General Info" })
                @Html.CustomNgSelectListFor(model => model.SelectedCurrentStatus, Model.CurrentStatus, null, new { @readonly = "readonly", section = "General Info" })
                @Html.CustomNgSelectListFor(model => model.SelectedReasonCode, Model.ReasonCd, null, new { @readonly = "readonly", section = "General Info" })
                @Html.CustomNgSelectListFor(model => model.SelectedSKDSNo, Model.SKDSNo, null, new { @readonly = "readonly", section = "General Info" })
                @Html.CustomNgTextBoxFor(model => model.oldCardNo, null, new { @readonly = "readonly", section = "General Info" })
                @Html.CustomNgTextBoxFor(model => model.XRefCardNo, null, new { @readonly = "readonly", section = "General Info" })
                @Html.CustomNgSelectListFor(model => model.SelectedVehicleModel, Model.VehicleModel, null, new { section = "General Info" })
                @Html.CustomNgTextBoxFor(model => model.vehRegNo, null, new { section = "General Info" })
                @Html.CustomNgTextBoxFor(model => model.DriverCd, null, new { section = "General Info" })
                @Html.CustomNgTextBoxFor(model => model.DriverName, null, new { section = "General Info" })
                @Html.CustomNgTextBoxFor(model => model.BlockedDate, null, new { id = "txtCardBlock", section = "General Info", @readonly = "readonly" })
                @Html.CustomNgTextBoxFor(model => model.TerminatedDate, null, new { id = "txtCardTerminatedDate", @readonly = "readonly", section = "General Info" })
                @Html.CustomNgSelectListFor(model => model.SelectedRenewalInd, Model.RenewalInd, null, new { id = "ddlRenewalInd", section = "General Info" })
                @Html.CustomNgSelectListFor(model => model.SelectedDialogueInd, Model.DialogueInd, null, new { id = "ddlDialogueInd", section = "General Info" })
                @Html.CustomNgCheckBoxFor(model => model.SelectedPushAlertInd, null, new { section = "General Info" })
                @Html.CustomNgTextBoxFor(model => model.MaxCountLimit, null, new { section = "General Info" })
                @Html.CustomNgTextBoxFor(model => model.AmtLimit, null, new { section = "General Info", @data_type = "amount" })
                @Html.CustomNgSelectListFor(model => model.SelectedAnnualFee, Model.AnnualFee, null, new { section = "General Info" })
                @Html.CustomNgSelectListFor(model => model.SelectedJonFee, Model.JonFee, null, new { section = "General Info" })
                @Html.CustomNgSelectListFor(model => model.SelectedProductUtilization, Model.ProductUtilization, null, new { id = "ddlGenProdCodes" })
                @Html.CustomNgCheckBoxFor(model => model.OdometerIndicator, null, new { section = "General Info" })
                @Html.CustomNgCheckBoxFor(model => model.PrimaryCard, null, new { section = "General Info" })
                @Html.CustomNgSelectListFor(model => model.SelectedBranchCd, Model.BranchCd, null, new { section = "General Info" })
                @Html.CustomNgSelectListFor(model => model.SelectedDivisionCode, Model.DivisionCode, null, new { section = "General Info" })
                @Html.CustomNgSelectListFor(model => model.SelectedDeptCd, Model.DeptCd, null, new { section = "General Info" })
            }

            <input type="hidden" id="genSaveAccess" value="@Html.GetControlStatus("Save", "General Info")" />
            </div>
        </div>
    </div>
