@using FleetOps.Helpers
@using ModelSector.Global_Resources;
@model ModelSector.CardFinancialInfoModel

<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="panel panel-default">
        <div class="panel-body">
            @using (Html.BeginForm("SaveAppcFinancialInfo", "CardHolderSignUp", FormMethod.Post, new { id = "formFinancialInfo", @class = "form-horizontal" }))
            {
                @Html.CustomNgTextBoxFor(model => model.txnLimit, null, new { @section = "Financial Info", @data_type = "amount" })
                @Html.CustomNgTextBoxFor(model => model.litLimit, null, new { @section = "Financial Info" })
                @Html.CustomNgTextBoxFor(model => model.PinExceedCnt, null, new { @section = "Financial Info" })
                @Html.CustomNgTextBoxFor(model => model.PinAttempted, null, new { @section = "Financial Info", @readonly = "readonly" })
                @Html.CustomNgTextBoxFor(model => model.PinTriedUpdDate, null, new { @section = "Financial Info", data_type = "datepicker", @readonly = "readonly" })
            }
            </div>
        </div>
    </div>
