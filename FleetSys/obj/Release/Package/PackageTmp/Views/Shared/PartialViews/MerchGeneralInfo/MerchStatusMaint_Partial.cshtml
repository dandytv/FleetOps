@using FleetOps.Helpers
@model ModelSector.ChangeStatus

<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="panel panel-default">
        <div class="panel-body">
            @using (Html.BeginForm("SaveChangedStatus", "CardAcctMaint", FormMethod.Post, new { id = "formChangedAcctSts", @class = "form-horizontal" }))
            {
                @Html.CustomNgTextBoxFor(model => model._CardnAccNo.CardNo, null, new { Class = "span5", @section = "Status Maintainance" })
                @Html.CustomNgSelectListFor(model => model.SelectedCurrentStatus, Model.CurrentStatus, null, new { @class = "span5", @section = "Status Maintainance" })
                @Html.CustomNgSelectListFor(model => model.SelectedChangeStatusTo, Model.ChangeStatusTo, null, new { @class = "span5", @section = "Status Maintainance" })
                @Html.CustomNgSelectListFor(model => model.SelectedReasonCode, Model.ReasonCode, null, new { @class = "span5", @section = "Status Maintainance" })
                @Html.CustomNgTextBoxFor(model => model.Remarks, null, new { Class = "span5", @section = "Status Maintainance" })
                @Html.CustomNgSelectListFor(model => model.SelectedRefType, Model.RefType, null, new { @class = "span5", @section = "Status Maintainance" })
                @Html.CustomNgTextBoxFor(model => model.RefId, null, new { Class = "span5", @section = "Status Maintainance" })
            }
            </div>
        </div>
    </div>

