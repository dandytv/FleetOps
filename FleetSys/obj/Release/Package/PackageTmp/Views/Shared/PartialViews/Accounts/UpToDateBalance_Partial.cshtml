                        @Html.CustomNgTextBoxFor(model => model.BatchAmt, null, new { @readonly = true, @class = "text-right", @section = "upd" })
                    </div>
                    <div class="col-sm-6">
                        @Html.CustomNgTextBoxFor(model => model.OnlineAmt, null, new { @readonly = true, @class = "text-right", @section = "upd" })
                    </div>
                    <div class="col-sm-6">
                        @Html.CustomNgTextBoxFor(model => model.OfflineAmt, null, new { @readonly = true, @class = "text-right", @section = "upd" })
