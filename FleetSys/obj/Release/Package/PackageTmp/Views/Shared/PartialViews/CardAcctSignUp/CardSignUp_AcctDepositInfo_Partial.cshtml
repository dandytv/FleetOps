@using FleetOps.Helpers;
@using ModelSector.Global_Resources;
@model ModelSector.CreditAssesOperation

<div class="panel panel-default">

    <div class="panel-heading">
        <div class="panel-actions pull-left">
            <a href="javascript:;" ng-click="modalClick();" class="btn-minimize"><i class="fa fa-plus"></i></a>
            <a href="javascript:;" class="btn-close"><i class="fa fa-refresh"></i></a>
        </div>
    </div>

    <div class="panel-body">
        <div id="DepositHolder" class="zerotop">
            <table id="tblDeposits" class="table bootstrap-datatable datatable small-font" data-dtable options ="dtOptions">
                <thead>
                    <tr>
                        <th>Direct Debit Ind</th>
                        <th>Deposit Type</th>
                        <th>Bank Account Type</th>
                        <th>Bank Name</th>
                        <th>Bank Account No.</th>
                        <th>Deposit Amount</th>
                        <th>Transaction ID</th>
                        <th>User ID</th>
                        <th>Creation Date</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
        <div id="DepositInfoModel" class="modal hide" data-backdrop="static" data-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">


            <div class="modal-header" data-toggle="modal">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">X</button>
                <h3 id="contactModalHeader">Deposit Info</h3>
            </div>
            <div class="modal-body">
                <form id="formDeposit" class="form-horizontal">
                    @Html.CustomNgTextBoxFor(model => model.Txnid, null, new { id = "depotxtTxnId", @readonly = "readonly", @section = "Deposit Info" })
                    @Html.CustomNgCheckBoxFor(model => model.DirectDebitInd, null, new { id = "depochkDirectDebitInd", @section = "Deposit Info" })
                    @Html.CustomNgSelectListFor(model => model.SelectedDepositType, Model.DepositType, null, new { id = "depoddlDepositType", @section = "Deposit Info" })
                    @Html.CustomNgSelectListFor(model => model.SelectedBankAcctType, Model.BankAcctType, null, new { id = "depoddlAcctType", @section = "Deposit Info" })
                    @Html.CustomNgSelectListFor(model => model.SelectedBankName, Model.BankName, null, new { id = "depoddlBankName", @section = "Deposit Info" })
                    @Html.CustomNgTextBoxFor(model => model.BankAcctNo, null, new { id = "depotxtBankAcctNo", @section = "Deposit Info" })
                    @Html.CustomNgTextBoxFor(model => model.DepositAmt, null, new { id = "depotxtDepositAmt", @section = "Deposit Info", @data_type = "amount" })
                    @Html.CustomNgTextBoxFor(model => model.BankBranchCode, new { required = true }, new { id = "depotxtBranchCd", @section = "Deposit Info" })
                    @Html.CustomNgTextBoxFor(model => model.DepositFromDate, null, new { data_type = "datepicker", id = "depotxtFromDate", @section = "Deposit Info" })
                    @Html.CustomNgTextBoxFor(model => model.DepositToDate, null, new { data_type = "datepicker", id = "depotxtToDate", @section = "Deposit Info" })
                    @Html.CustomNgTextBoxFor(model => model.remarks, null, new { id = "depotxtRemarks", @section = "Deposit Info" })
                    @Html.CustomNgTextBoxFor(model => model.UserId, null, new { id = "depotxtUserId", @readonly = "readonly", @section = "Deposit Info" })
                </form>
            </div>
            <div class="modal-footer">
                @if (!Html.NotAuthorized("Deposit Info", "Save"))
                {
                    <button id="btnDepositInfoMaint" style="width: 60px" class="btn btn-primary" @(Html.IsReadOnly("Deposit Info", "Save") ? "disabled=disabled" : "")>Save</button>
                }
            </div>
        </div>
    </div>
</div>
