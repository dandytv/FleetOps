@using FleetOps.Helpers;
@using ModelSector.Global_Resources;
@model  ModelSector.CreditAssesOperation


<form id="formCAO" class="form-horizontal">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="panel panel-default">
            <div class="panel-body">

                @Html.CustomNgTextBoxFor(model => model.CreditLimit, null, new { @data_type = "amount", @section = "Credit & Appl Assessment" })
                @Html.CustomNgSelectListFor(model => model.SelectedPaymentMode, Model.PaymentMode, new { required = true }, new { @section = "Credit & Appl Assessment" })
                @Html.CustomNgSelectListFor(model => model.SelectedPaymentTerm, Model.PaymentTerm, new { required = true }, new { @section = "Credit & Appl Assessment" })
                @Html.CustomNgTextBoxFor(model => model.TxnAmtLimit, null, new { @section = "Credit & Appl Assessment", @data_type = "amount" })
                @Html.CustomNgTextBoxFor(model => model.TxnLitLimit, null, new { @section = "Credit & Appl Assessment" })
                @Html.CustomNgSelectListFor(model => model.SelectedTerritoryCd, Model.TerritoryCd, null, new { @section = "Credit & Appl Assessment" })
                @Html.CustomNgSelectListFor(model => model.SelectedRiskCategry, Model.RiskCategory, null, new { @section = "Credit & Appl Assessment" })
                @Html.CustomNgSelectListFor(model => model.SelectedAssesmtType, Model.AssesmtType, null, new { @section = "Credit & Appl Assessment" })
                @Html.CustomNgSelectListFor(model => model.SelectedReasonCode, Model.ReasonCd, null, new { @section = "Credit & Appl Assessment" })
                @Html.CustomNgTextBoxFor(model => model.ValidityDate, new { required = true }, new { @section = "Credit & Appl Assessment", data_type = "datepicker" })
                @Html.CustomNgTextBoxFor(model => model.NRID, new { required = true }, new { @section = "Credit & Appl Assessment", data_type = "datepicker" })
                @Html.HiddenFor(model => model.ValidityDate)
                @Html.HiddenFor(model => model.NRID)
                @Html.CustomNgTextBoxFor(model => model.SecurityAmt, null, new { @readonly = "readonly", @section = "Credit & Appl Assessment", @data_type = "amount" })

                <fieldset>
                    <legend>Credit Assessor</legend>
                    @Html.CustomNgTextBoxFor(model => model.AppvUserIdQAOff, null, new { @section = "Credit & Appl Assessment", @readonly = "readonly" })
                    @Html.CustomNgSelectListFor(model => model.SelectedAppvStsQAOff, Model.AppvStsQAOff, null, new { @class = "span5", @section = "Credit & Appl Assessment" })
                    @Html.CustomNgTextBoxFor(model => model.AppvDateQAOff, null, new { @section = "Credit & Appl Assessment", data_type = "datepicker", @readonly = "readonly" })
                </fieldset>
                <fieldset>
                    <legend>Management Approver</legend>
                    @Html.CustomNgTextBoxFor(model => model.AppvUserIdBackOff, null, new { @section = "Credit & Appl Assessment", @readonly = "readonly" })
                    @Html.CustomNgSelectListFor(model => model.SelectedAppvStsBackOff, Model.AppvStsBackOff, null, new { @section = "Credit & Appl Assessment" })
                    @Html.CustomNgTextBoxFor(model => model.AppvDateBackOff, null, new { @section = "Credit & Appl Assessment", data_type = "datepicker", @readonly = "readonly" })
                </fieldset>

                <fieldset>
                    <legend>EDP</legend>
                    @Html.CustomNgTextBoxFor(model => model.AppvUserIdEDP, null, new { @section = "Credit & Appl Assessment", @readonly = "readonly" })
                    @Html.CustomNgSelectListFor(model => model.SelectedAppvStsEDP, Model.AppvStsEDP, null, new { @section = "Credit & Appl Assessment" })
                    @Html.CustomNgTextBoxFor(model => model.AppvDateEDP, null, new { @section = "Credit & Appl Assessment", data_type = "datepicker", @readonly = "readonly" })

                </fieldset>
                </div>
            </div>
        </div>
</form>
<input type="hidden" id="caoSaveAccess" value="@Html.GetControlStatus("Save","Credit & Appl Assessment")" />

