@using FleetOps.Helpers
@model ModelSector.SKDS

<div class="panel panel-default">

    <div class="panel-heading">
        <div class="panel-actions pull-left">
            @if (!Html.NotAuthorized("skd", "New"))
            {
                <a href="javascript:;" @(Html.IsReadOnly("skd", "New") ? "disabled=disabled" : "ng-click=modalClick();") class="btn-minimize"><i class="fa fa-plus"></i></a>
            }
            <a href="javascript:;" class="btn-close"><i class="fa fa-refresh"></i></a>
        </div>
    </div>

    <div class="panel-body">
        <div id="contactHolder" class="zerotop">
            <table id="tblSKDS" class="table bootstrap-datatable datatable small-font" data-dtable options ="dtOptions">
                <thead>
                    <tr>
                        <th>SKDS No</th>
                        <th>Quota</th>
                        <th>Agreement From Date</th>
                        <th>Agreement To Date</th>
                        <th>Business Reg No</th>@*Reference*@
                        <th>Remarks</th>
                        <th>User Id</th>
                        <th>Creation Date</th>
                        <th>TxnId</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>



        <div id="SKDSModal" class="modal hide" data-backdrop="static" data-keyboard="true" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-header" data-toggle="modal">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">X</button>
                <h3 id="contactModalHeader">SKDS</h3>
            </div>
            <div class="modal-body">
                <form id="formSKDS" class="form-horizontal">

                    @Html.CustomNgTextBoxFor(model => model.TxnId, null, new { id = "txtTxnId", @section = "skd", @readonly = "true" })
                    @Html.CustomNgTextBoxFor(model => model.SKDSNo, new { required = true }, new { id = "txtSKDSNo", @section = "skd" })
                    @Html.CustomNgTextBoxFor(model => model.SKDSLitreQuota, new { required = true }, new { id = "txtSkdsLitreQuota", @section = "skd" })
                    @Html.CustomNgTextBoxFor(model => model.QuotaFromDate, new { required = true }, new { id = "txtQuotaFromDate", @section = "skd", data_type = "datepicker" })
                    @Html.CustomNgTextBoxFor(model => model.QuotaToDate, new { required = true }, new { id = "txtQuotaToDate", @section = "skd", data_type = "datepicker" })
                    @Html.CustomNgTextBoxFor(model => model.EffFromDate, new { required = true }, new { id = "txtEffFromDate", @section = "skd", data_type = "datepicker" })
                    @Html.CustomNgTextBoxFor(model => model.EffToDate, new { required = true }, new { id = "txtEffToDate", @section = "skd", data_type = "datepicker" })
                    @Html.CustomNgTextBoxFor(model => model.Refference, new { required = true }, new { id = "txtRefference", @section = "skd" })
                    @Html.CustomNgTextBoxFor(model => model.Remarks, null, new { id = "txtRemarks", @section = "skd" })
                    @Html.CustomNgTextBoxFor(model => model.LastUpdDate, null, new { id = "txtLastUpdDate", @section = "skd", @readonly = "true" })
                    @Html.CustomNgTextBoxFor(model => model.UserId, null, new { id = "txtUserId", @section = "skd", @readonly = "true" })
                    @Html.CustomNgTextBoxFor(model => model.CreationDate, null, new { id = "txtCreationDate", @section = "skd", data_type = "datepicker", @readonly = "true" })
                </form>
            </div>
            <div class="modal-footer">
                @if (!Html.NotAuthorized("skd", "Save"))
                {
                    <div class="form-actions">
                        <button id="btnSkdstoSave" @(Html.IsReadOnly("skd", "Save") ? "disabled=disabled" : "") style="width: 60px" class="btn btn-primary">Save</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


