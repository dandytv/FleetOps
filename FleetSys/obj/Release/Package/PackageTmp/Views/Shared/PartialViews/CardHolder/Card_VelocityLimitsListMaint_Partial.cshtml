@using FleetOps.Helpers
@using ModelSector.Global_Resources;
@model  ModelSector.VeloctyLimitListMaintModel


<div class="panel panel-default">

    <div class="panel-heading">
        <div class="panel-actions pull-left">
            <a href="javascript:;" ng-click="modalClick();" class="btn-minimize"><i class="fa fa-plus"></i></a>
            <a href="javascript:;" class="btn-close"><i class="fa fa-refresh"></i></a>
        </div>
    </div>

    <div class="panel-body">
        <div id="velocityHolder" class="zerotop">
            <table id="tblVelocity" class="table bootstrap-datatable datatable small-font" data-dtable options ="dtOptions">
                <thead>
                    <tr>
                        <th>Velocity Indicator</th>
                        <th>Product Code</th>
                        <th>Counter Limit</th>
                        <th>Velocity Limit</th>
                        <th>Velocity Litre</th>
                        <th>Spent Counter</th>
                        <th>Spent Limit</th>
                        <th>Spent Litre</th>
                        <th>Last UpdateDate</th>
                        <th>User ID</th>
                        <th>Creation Date</th>
                        <th>VeloInd</th>
                        <th>ProdCd</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
        <div id="VelocityListModal" class="modal hide" data-backdrop="static" data-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">


            <div class="modal-header" data-toggle="modal">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">X</button>
                <h3 id="contactModalHeader">Velocity Limit Maintenance</h3>
            </div>
            <div class="modal-body">

                <form id="frmVelocityLimit" class="form-horizontal">


                    @Html.CustomNgSelectListFor(model => model.SelectedVelocityInd, Model.VelocityInd, null, new { id = "ddlVelocityInd", section = "Velocity Limit", @data_bind = "selectedText:VelocityInd" })
                    @Html.CustomNgSelectListFor(model => model.SelectedProdCd, Model.ProdCd, null, new { id = "ddlVelocityProdCd", section = "Velocity Limit", @data_bind = "selectedText:ProdCd" })
                    @Html.CustomNgTextBoxFor(model => model.CntrLimit, null, new { id = "txtVelocityCntLimit", @data_bind = "value:ApplId", section = "Velocity Limit" })
                    @Html.CustomNgTextBoxFor(model => model.VelocityLitre, null, new { id = "txtVelocityLitre", @data_bind = "value:ApplId", section = "Velocity Limit" })
                    @Html.CustomNgTextBoxFor(model => model.VelocityLimit, null, new { id = "txtVelocityLimit", @data_type = "amount", section = "Velocity Limit" })
                    @Html.CustomNgTextBoxFor(model => model.LastUpdateDate, null, new { id = "txtVelocityLastUpdate", @data_bind = "value:LastUpdateDate", section = "Velocity Limit", Disabled = "true" })
                    @Html.CustomNgTextBoxFor(model => model.UserId, null, new { id = "txtVelocityUserId", section = "Velocity Limit", @readonly = "readonly" })
                    @Html.CustomNgTextBoxFor(model => model.CreationDate, null, new { id = "txtVelocityCreationDate", section = "Velocity Limit", @readonly = "readonly" })
                    <input type="hidden" id="xxVelocisedit" value="Add" />



                </form>
            </div>
            <div class="modal-footer">
                @if (!Html.NotAuthorized("Velocity Limit", "Save"))
                {
                    <div class="form-actions">
                        <button id="saveVelocityLimit" @(Html.IsReadOnly("Velocity Limit", "Save") ? "disabled=disabled" : "") style="width: 60px" class="btn btn-primary">Save</button>
                    </div>
                }
            </div>
        </div>

        <div id="velocityDeleteConfirm" data-backdrop="static" class="modal hide">
            <div class="modal-header deletion-head">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">X</button>
                <h4>Confirmation</h4>
            </div>
            <div class="modal-body">
                Please confirm the record deletion
            </div>
            <div class="modal-footer">
                <a href="#" data-dismiss="modal" class="btn">Cancel</a>
                <a href="#" id="velocityDeleteConfirmed" class="btn btn-danger">Yes,Delete<i class="icon-twitter"></i></a>
            </div>
        </div>
    </div>
</div>
