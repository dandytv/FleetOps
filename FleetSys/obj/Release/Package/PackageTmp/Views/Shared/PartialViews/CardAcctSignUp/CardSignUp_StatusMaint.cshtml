@using FleetOps.Helpers
@model ModelSector.ChangeStatus

    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="panel panel-default">
            <div class="panel-body">
                @using (Html.BeginForm("SaveChangedStatus", "CardAcctMaint", FormMethod.Post, new { id = "formChangedAcctSts", @class = "form-horizontal" }))
                {
                    @Html.HiddenFor(m => m._CardnAccNo.CardNo)
                    @Html.CustomNgSelectListFor(model => model.SelectedCurrentStatus, Model.CurrentStatus, null, new { @class = "span5", disabled = "true" })
                    @Html.CustomNgSelectListFor(model => model.SelectedChangeStatusTo, Model.ChangeStatusTo, null, new { @class = "span5" })
                    @Html.CustomNgSelectListFor(model => model.SelectedReasonCode, Model.ReasonCode, null, new { @class = "span5" })
                    @Html.CustomNgTextAreaFor(model => model.Remarks, null, new { Class = "span5", rows = "3" })
                    @Html.CustomNgSelectListFor(model => model.SelectedRefType, Model.RefType, null, new { @class = "span5" })
                    @Html.CustomNgTextBoxFor(model => model.RefId, null, new { Class = "span5" })
                }
                </div>
            </div>
        </div>


