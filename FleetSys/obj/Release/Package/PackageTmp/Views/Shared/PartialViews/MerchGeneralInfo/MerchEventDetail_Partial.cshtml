@using FleetOps.Helpers
@using ModelSector.Global_Resources;
@model ModelSector.EventDetails

<div class="panel panel-default">

    <div class="panel-heading">
        <div class="panel-actions pull-left">
            <a href="javascript:;" ng-click="modalClick();" class="btn-minimize"><i class="fa fa-plus"></i></a>
            <a href="javascript:;" class="btn-close"><i class="fa fa-refresh"></i></a>
        </div>
    </div>

    <div class="panel-body">
        <div id="contactHolder" class="zerotop">
            <table id="tblEventDetailsLogger" class="table bootstrap-datatable datatable small-font" data-dtable options="dtOptions">
                <thead>
                    <tr>
                        <th>Event Id</th>
                        <th>Sequence No</th>
                        <th>Description</th>
                        <th>Reminder</th>
                        <th>CreatedBy</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
        <div id="EventDetailListModal" class="modal hide" data-backdrop="static" data-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">

            <div class="modal-header" data-toggle="modal">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">X</button>
                <h3 id="contactModalHeader">Event Details Logger</h3>
            </div>
            <div class="modal-body">
                <form id="frmEventDetailLogger" class="form-horizontal">
                    @Html.CustomNgTextBoxFor(model => model.EventId, null, new { id = "txtEventId", Class = "span5" })
                    @Html.CustomNgTextBoxFor(model => model.SeqNo, null, new { id = "txtSeqNo", Class = "span5" })
                    @Html.CustomNgTextAreaFor(model => model.Description, null, new { id = "txtEventDescp", Class = "span5", rows = "3" })
                    @Html.CustomNgTextBoxFor(model => model.ReminderDatetime, null, new { id = "txtReminderTime", Class = "span5" })
                    @Html.CustomNgTextBoxFor(model => model.UserId, null, new { id = "txtUserId", Class = "span5" })

                    <input type="hidden" id="xxloggerisedit" value="Add" />
                </form>
            </div>
            <div class="modal-footer">
                <div class="form-actions">
                    <button id="btnLoggertoAdd" style="width: 60px" class="btn btn-primary">Save</button>
                </div>
            </div>
        </div>
    </div>
</div>
